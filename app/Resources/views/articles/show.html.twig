{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Emailaddress</th>
                <td>{{ article.emailAddress }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ article.text }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col-sm-12" style="text-align: right;">
        <a href="{{ path('articles_index') }}"><button class="btn btn-info">Back to the list</button></a>
        <a href="{{ path('articles_edit', { 'id': article.id }) }}"><button class="btn btn-primary">Edit</button></a>
        <form style="float: right;margin-left: 4px;" action="{{ path('articles_delete', { 'id': article.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-warning">
                Delete
            </button>
        </form>
    </div>
{% endblock %}
